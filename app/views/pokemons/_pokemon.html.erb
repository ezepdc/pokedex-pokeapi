<div class="col">
  <div class="card shadow h-100">
    <div class="d-flex justify-content-center">
      <%= link_to pokemon_path(pokemon.name) do %>
        <%= image_tag pokemon.photos.first, height: 150  %>
      <% end %>
    </div>
    <div class="card-body">
      <h4 class="card-title fw-bold"><%= pokemon.name.capitalize %></h4>
      <p class="card-text">
        <% if show_effect %>
          <p><%= @pokemon.effect %></p>
        <% end %>
        <p><% pokemon.types.each do |type| %>
          <div class="badge text-bg-info">
            <%= type.capitalize %>
          </div>
        <% end %></p>
        <p>Peso: <%= pokemon.weight %></p>
        <p>Habilidades</p>
        <% pokemon.abilities.each do |ability| %>
          <div class="badge text-bg-light">
            <%= ability.capitalize %>
          </div>
        <% end %>
      </p>
      <% if show_evolves %>
        <p>Evoluciones</p>
        <p>
          <% @pokemon.evolves.each do |evolve| %>
            <% if evolve == pokemon.name %>
              <span class="badge text-bg-secondary">
                <%= evolve.capitalize %>
              </span>
            <% else %>
              <%= link_to evolve.capitalize, pokemon_path(evolve), class: "badge text-bg-dark text-decoration-none" %>
            <% end %>
          <% end %>
        </p>
      <% end %>
    </div>
  </div>
</div>
