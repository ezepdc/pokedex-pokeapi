<div class="banner mb-4">
  <%= render "shared/banner" %>
  <div class="text-center text-white">
    <h1>Pokédex</h1>
  </div>
  <div class="container d-flex col-12 col-md-6 col-lg-4">
    <%= form_tag({controller: "pokemons", action: "index"}, method: :get, class: "d-flex my-3") do %>
      <%= text_field_tag :search_term,
      params[:search_term],
      class: "form-control",
      placeholder: "Buscar Pokemón" %>
      <%= submit_tag "Buscar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<div class="container">
  <% if @pokemon %>
    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item">
          <%= link_to :back, class:"page-link" do %>
            <i class="fa-sharp fa-solid fa-chevron-left"></i> Volver
          <% end %>
        </li>
      </ul>
    </nav>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 d-flex justify-content-center mb-4">
      <%= render "shared/poke", poke: @pokemon %>
    </div>
  <% else %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <%= render partial: "shared/poke", collection: @pokemons.each %>
    </div>
    <nav aria-label="Page navigation example" class="m-4">
      <ul class="pagination justify-content-center">
        <% if @previous %>
          <li class="page-item">
            <%= link_to pokemons_path + "?" + @previous, class:"page-link" do %>
              <i class="fa-sharp fa-solid fa-chevron-left"></i> Anteriores
            <% end %>
          </li>
        <% end %>
        <% if @next %>
          <li class="page-item">
            <%= link_to pokemons_path + "?" + @next, class:"page-link" do %>
              Siguientes <i class="fa-sharp fa-solid fa-chevron-right"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  <% end %>
</div>
