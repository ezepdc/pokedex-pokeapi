        <%= link_to pokemons_path, class:"page-link" do %>
          <i class="fa-solid fa-house"></i> Home
        <% end %>
      </li>
    </ul>
  </nav>
  <div class="text-center text-white">
    <h1>Pok√©dex</h1>
